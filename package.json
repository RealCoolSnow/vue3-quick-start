{
  "name": "vue3-quick-start",
  "description": "Quick start project with Vue3 & Vite & TypeScript.",
  "version": "1.1.0",
  "private": true,
  "author": "CoolSnow(coolsnow2020@gmail.com)",
  "license": "MIT",
  "scripts": {
    "dev": "cross-env NODE_ENV=development vite --port 3001 --open",
    "build": "cross-env NODE_ENV=production vite build",
    "build-dev": "cross-env NODE_ENV=production vite build --mode devserver",
    "test": "cross-env NODE_ENV=development jest -i",
    "lint": "eslint \"**/*.{vue,ts,js}\""
  },
  "dependencies": {
    "@vueuse/core": "^7.6.2",
    "axios": "^0.26.0",
    "vue": "^3.2.31",
    "vue-i18n": "^9.1.9",
    "vue-router": "^4.0.12",
    "vuex": "^4.0.2"
  },
  "devDependencies": {
    "@antfu/eslint-config-vue": "^0.16.1",
    "@types/jest": "^27.4.0",
    "@vitejs/plugin-vue": "^2.2.2",
    "@vue/compiler-sfc": "^3.2.31",
    "@vue/test-utils": "^2.0.0-rc.18",
    "@vue/vue3-jest": "^27.0.0-alpha.4",
    "@vuedx/typescript-plugin-vue": "^0.7.4",
    "autoprefixer": "latest",
    "babel-jest": "^27.5.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.4.0",
    "jest": "^27.5.1",
    "mockjs": "^1.1.0",
    "pnpm": "^6.31.0",
    "postcss": "latest",
    "tailwindcss": "^3.0.23",
    "ts-jest": "^27.1.3",
    "typescript": "4.5.5",
    "vite": "^2.8.4",
    "vite-plugin-components": "^0.11.4",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-mock": "^2.9.6",
    "vite-plugin-pages": "^0.20.2"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "moduleFileExtensions": [
      "js",
      "ts",
      "json",
      "vue"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "transform": {
      "^.+\\.ts$": "ts-jest",
      "^.+\\.vue$": "@vue/vue3-jest"
    }
  }
}
