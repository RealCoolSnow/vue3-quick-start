{
  "name": "vue3-quick-start",
  "version": "1.1.0",
  "private": true,
  "description": "Quick start project with Vue3 & Vite & TypeScript.",
  "license": "MIT",
  "author": "CoolSnow(coolsnow2020@gmail.com)",
  "scripts": {
    "build": "cross-env NODE_ENV=production vite build",
    "build-dev": "cross-env NODE_ENV=production vite build --mode devserver",
    "dev": "cross-env NODE_ENV=development vite --port 3001 --open",
    "format": "pretty-quick",
    "lint": "eslint \"**/*.{vue,ts,js}\"",
    "sort": "npx sort-package-json \"package.json\"",
    "test": "cross-env NODE_ENV=development jest -i"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts",
      "json",
      "vue"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.ts$": "ts-jest",
      "^.+\\.vue$": "@vue/vue3-jest"
    }
  },
  "dependencies": {
    "@vueuse/core": "^8.9.4",
    "axios": "^0.27.2",
    "vue": "^3.2.37",
    "vue-i18n": "^9.1.10",
    "vue-router": "^4.1.2",
    "vuex": "^4.0.2"
  },
  "devDependencies": {
    "@antfu/eslint-config-vue": "^0.25.2",
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@types/jest": "^28.1.6",
    "@vitejs/plugin-vue": "^3.0.1",
    "@vue/compiler-sfc": "^3.2.37",
    "@vue/test-utils": "^2.0.2",
    "@vue/vue3-jest": "^28.0.1",
    "@vuedx/typescript-plugin-vue": "^0.7.5",
    "autoprefixer": "latest",
    "babel-jest": "^28.1.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^28.1.3",
    "mockjs": "^1.1.0",
    "pnpm": "^7.6.0",
    "postcss": "latest",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "tailwindcss": "^3.1.6",
    "ts-jest": "^28.0.7",
    "typescript": "4.7.4",
    "vite": "^3.0.2",
    "vite-plugin-components": "^0.11.4",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-mock": "^2.9.6",
    "vite-plugin-pages": "^0.25.0"
  }
}
