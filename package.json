{
  "name": "vue3-quick-start",
  "version": "1.1.0",
  "private": true,
  "description": "Quick start project with Vue3 & Vite & TypeScript.",
  "license": "MIT",
  "author": "CoolSnow(coolsnow2020@gmail.com)",
  "scripts": {
    "build": "cross-env NODE_ENV=production vite build",
    "build-dev": "cross-env NODE_ENV=production vite build --mode devserver",
    "dev": "cross-env NODE_ENV=development vite --port 3001 --open",
    "format": "pretty-quick",
    "lint": "eslint \"**/*.{vue,ts,js}\"",
    "sort": "npx sort-package-json \"package.json\"",
    "test": "cross-env NODE_ENV=development jest -i"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts",
      "json",
      "vue"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.ts$": "ts-jest",
      "^.+\\.vue$": "@vue/vue3-jest"
    }
  },
  "dependencies": {
    "@vueuse/core": "^10.3.0",
    "axios": "^1.4.0",
    "vue": "^3.3.4",
    "vue-i18n": "^9.2.2",
    "vue-router": "^4.2.4",
    "vuex": "^4.1.0"
  },
  "devDependencies": {
    "@antfu/eslint-config-vue": "^0.40.0",
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7",
    "@types/jest": "^29.5.3",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vue/compiler-sfc": "^3.3.4",
    "@vue/test-utils": "^2.4.1",
    "@vue/vue3-jest": "^29.2.4",
    "@vuedx/typescript-plugin-vue": "^0.7.6",
    "autoprefixer": "latest",
    "babel-jest": "^29.6.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.10.0",
    "jest": "^29.6.2",
    "mockjs": "^1.1.0",
    "pnpm": "^8.6.11",
    "postcss": "latest",
    "prettier": "^3.0.1",
    "pretty-quick": "^3.1.3",
    "tailwindcss": "^3.3.3",
    "ts-jest": "^29.1.1",
    "typescript": "5.1.6",
    "vite": "^4.4.8",
    "vite-plugin-components": "^0.11.4",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-mock": "^3.0.0",
    "vite-plugin-pages": "^0.31.0"
  }
}
